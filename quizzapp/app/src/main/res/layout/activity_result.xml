<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="midnight.quizapp.Result">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/marks"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/Black"
                android:textSize="36sp"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/marks"
                android:id="@+id/graph" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:textColor="@color/Black"
                android:text="Please wait for"
                android:gravity="center"
                android:layout_below="@+id/marks"
                android:id="@+id/wait" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="55sp"
                android:textColor="@color/Black"
                android:text="25"
                android:gravity="center"
                android:layout_below="@+id/wait"
                android:id="@+id/graphAlt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Questions      : "
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv1"
                android:layout_below="@+id/graph"
                android:layout_marginTop="20dp"
                android:textColor="@color/Black"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:text="Correct Answers    : "
                android:id="@+id/tv2"
                android:textColor="@color/Black"
                android:layout_below="@+id/tv1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incorrect Answers  : "
                android:layout_marginLeft="5dp"
                android:textSize="25sp"
                android:id="@+id/tv3"
                android:textColor="@color/Black"
                android:layout_below="@+id/tv2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_marginLeft="15dp"
                android:textColor="@color/Black"
                android:textSize="25sp"
                android:id="@+id/tvTotal"
                android:layout_above="@+id/tv2"
                android:layout_toRightOf="@+id/tv3"
                android:layout_toEndOf="@+id/tv3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/Black"
                android:textSize="25sp"
                android:id="@+id/tvMarks"
                android:layout_above="@+id/tv3"
                android:layout_alignLeft="@+id/tvTotal"
                android:layout_alignStart="@+id/tvTotal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/Black"
                android:textSize="25sp"
                android:id="@+id/tvIncorrect"
                android:layout_alignBottom="@+id/tv3"
                android:layout_alignLeft="@+id/tvMarks"
                android:layout_alignStart="@+id/tvMarks" />

        </RelativeLayout>
        </ScrollView>


</RelativeLayout>
