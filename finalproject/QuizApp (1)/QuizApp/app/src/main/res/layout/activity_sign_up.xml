<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/my_toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.gc.materialdesign.views.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbar_actionbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register to start!"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:textColor="@color/Black"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                app:met_baseColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Name"
                app:met_primaryColor="#f44336"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textView"
                android:ems="10"
                android:hint=" Name"
                android:id="@+id/etName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                app:met_baseColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Student Id"
                app:met_primaryColor="#f44336"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/etName"
                android:ems="10"
                android:hint=" Student Id"
                android:id="@+id/etUsername"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                app:met_baseColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Email"
                app:met_primaryColor="#f44336"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/etUsername"
                android:ems="10"
                android:hint=" Email"
                android:id="@+id/etEmail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                app:met_baseColor="#1E88E5"
                app:met_primaryColor="#f44336"
                android:inputType="text"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/etEmail"
                android:layout_marginLeft="10dp"
                android:onClick="setClass"
                android:focusable="false"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint=" Class"
                android:id="@+id/etClass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:met_baseColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Password"
                app:met_primaryColor="#f44336"
                android:background="@color/white"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/etClass"
                android:ems="10"
                android:hint=" Password"
                android:id="@+id/etPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:met_baseColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Confirm Password"
                app:met_primaryColor="#f44336"
                android:background="@color/white"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/etPassword"
                android:ems="10"
                android:hint=" Confirm Password"
                android:id="@+id/etCnfrmPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>



            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:inputType="number"
                app:met_baseColor="#1E88E5"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Phone Number"
                app:met_primaryColor="#f44336"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/etCnfrmPassword"
                android:ems="10"
                android:hint=" Phone Number"
                android:id="@+id/etPhone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:src="@mipmap/man"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/etPhone"
                android:id="@+id/img_profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginRight="5dp"
                android:background="@color/blue"
                android:onClick="profile"
                android:text="Browse"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/img_profile"
                android:layout_below="@+id/etPhone"/>

            <com.gc.materialdesign.views.ButtonRectangle
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_below="@+id/img_profile"
                android:ems="10"
                android:onClick="register"
                android:text="Sign Up"
                android:id="@+id/register"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>



        </RelativeLayout>
    </com.gc.materialdesign.views.ScrollView>


</RelativeLayout>
